/**
 * Implements hook_ctools_plugin_api().
 */
function ercore_ds_ctools_plugin_api($module, $api) {
  if ($module == 'ds' && $api == 'ds') {
    return array('version' => 1);
  }
}

/**
 * Implements hook_install().
