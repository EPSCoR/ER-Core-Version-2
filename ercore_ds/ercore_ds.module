function ercore_ds_install() {
  variable_set('ds_extras_field_template', '1');
  variable_set('ds_classes_fields', 'h2|Heading 2
h3|Heading 3
h4|Heading 4
pull-right|Pull Right
pull-left|Pull Left
date|Dates
teaser-date|Teaser Dates
featured-field|Featured Field'
    );
}

